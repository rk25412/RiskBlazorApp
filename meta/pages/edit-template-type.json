{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Name",
                              "component": "NAME",
                              "name": "NAMELabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "NAME",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${templatetype.NAME}"
                            },
                            {
                              "type": "required-validator",
                              "name": "NAMERequiredValidator",
                              "component": "NAME",
                              "text": "NAME is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Isactive",
                              "component": "ISACTIVE",
                              "name": "ISACTIVELabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "bool",
                              "type": "checkbox",
                              "name": "ISACTIVE",
                              "value": "${templatetype.ISACTIVE}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update TemplateType",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ClearConnection.updateTemplateType",
                        "parameters": [
                          {
                            "name": "TEMPLATE_TYPE_ID",
                            "value": "${parameters.TEMPLATE_TYPE_ID}"
                          },
                          {
                            "name": "TemplateType",
                            "value": "${templatetype}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${templatetype}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "ClearCovid.Models.ClearConnection.TemplateType",
                  "data": "${templatetype}",
                  "visible": "${templatetype != null}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "ClearConnection.getTemplateTypeByTEMPLATE_TYPE_ID",
        "parameters": [
          {
            "name": "TEMPLATE_TYPE_ID",
            "value": "${parameters.TEMPLATE_TYPE_ID}"
          }
        ],
        "then": [
          {
            "name": "templatetype",
            "type": "set",
            "value": "${result}",
            "valueType": "ClearCovid.Models.ClearConnection.TemplateType"
          }
        ],
        "error": [],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Template Type",
  "access": "Authenticated",
  "layout": "Main"
}